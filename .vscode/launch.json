    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Depurar con Node",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        },
        {
            "type":"firefox",
            "request": "launch",
            "name":"Depurara con firefox",
            "url":"http://localhost:3000",
            "webRoot": "${file}",
            "remote":true,
            "port":3000
        }
    ]
}